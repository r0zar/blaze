{
  "name": "blaze-sdk",
  "version": "0.2.7",
  "description": "A lightweight SDK for managing off-chain transfers with on-chain settlement for Stacks dapps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r0zar/blaze.git"
  },
  "bugs": {
    "url": "https://github.com/r0zar/blaze/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "build": "tsup",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prerelease": "npm run test && npm run build",
    "release": "npm run publish:latest"
    "prepublishOnly": "npm run build",
    "publish:check": "git diff-index --quiet HEAD || (echo 'Working directory not clean. Please commit or stash changes first.' && exit 1)",
    "publish:next": "npm run publish:check && npm publish --tag next && git push && git push --tags",
    "publish:latest": "npm run publish:check && npm publish --tag next && npm dist-tag add blaze-sdk@$(npm pkg get version | sed 's/\"//g') latest && git push && git push --tags",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "stacks",
    "blockchain",
    "scaling",
    "batching",
    "transfers"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@stacks/network": "^7.0.2",
    "@stacks/transactions": "^7.0.4",
    "axios": "^1.0.0"
  },
  "peerDependencies": {
    "@stacks/connect": ">=7.0.0"
  },
  "optionalDependencies": {
    "@vercel/kv": "^3.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "cross-fetch": "^4.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
