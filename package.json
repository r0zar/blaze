{
  "name": "blaze-sdk",
  "version": "0.2.10",
  "description": "A lightweight SDK for managing off-chain transfers with on-chain settlement for Stacks dapps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r0zar/blaze.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/client/index.js",
  "module": "./dist/client/index.mjs",
  "types": "./dist/client/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client/index.d.ts"
      ],
      "server": [
        "./dist/server/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf dist",
    "test": "vitest",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "git diff-index --quiet HEAD || (echo 'Working directory not clean. Please commit changes first.' && exit 1)",
    "prepare": "npm run clean && npm run build",
    "publish:patch": "npm run test && npm run version:patch && npm publish && git push --follow-tags",
    "publish:minor": "npm run test && npm run version:minor && npm publish && git push --follow-tags",
    "publish:major": "npm run test && npm run version:major && npm publish && git push --follow-tags"
  },
  "keywords": [
    "stacks",
    "blockchain",
    "scaling",
    "batching",
    "transfers"
  ],
  "license": "MIT",
  "dependencies": {
    "@stacks/network": "^7.0.2",
    "@stacks/transactions": "^7.0.4",
    "axios": "^1.0.0"
  },
  "peerDependencies": {
    "@stacks/connect": ">=7.0.0"
  },
  "optionalDependencies": {
    "@vercel/kv": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
